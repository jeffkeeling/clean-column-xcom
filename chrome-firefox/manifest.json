{
  "name": "Clean Column X.com",
  "description": "Remove trends and recommendations from X.com's sidebar while keeping search intact",
  "version": "1",
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko_android": {},
    "gecko": {
      "id": "{1d681d5b-6556-4055-ba32-46a7c61e59ad}"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://x.com/*"],
      "css": ["styles.css"]
    }
  ]
}
